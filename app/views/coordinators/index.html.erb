<p id="notice"><%= notice %></p>

<div class="link2"><%= link_to 'Inregistrare noua', new_coordinator_path %></div><br/>
<div class="table-users2">
<div class="header">Lista coordonatori</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>Titlu stiintific</th>
      <th>Prenume</th>
      <th>Nume</th>
      <th>Data nastere</th>
      <th>Ordin ministru</th>
      <th>Observatii</th>
    </tr>
  </thead>

  <tbody>
    <% @coordinators.each do |coordinator| %>
      <tr>
        <td><%= link_to 'Detalii', coordinator %></td>
        <td><%= link_to 'Modificare', edit_coordinator_path(coordinator) %></td>
        <td><%= link_to 'Stergere', coordinator, method: :delete, data: { confirm: 'esti sigur ca vrei sa stergi?' } %></td>
        <td><%= coordinator.title %></td>
        <td><%= coordinator.firstname %></td>
        <td><%= coordinator.lastname %></td>
        <td><% unless coordinator.birthdate.blank? %><%= coordinator.birthdate.strftime("%d.%m.%Y") %><% end %></td>
        <td><%= coordinator.decree %></td>
        <td><%= coordinator.remarks %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<div class="link2"><%= link_to 'Inregistrare noua', new_coordinator_path %></div>
